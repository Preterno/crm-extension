{
    "manifest_version": 3,
    "name": "ActiveCampaign CRM Data Extractor",
    "version": "1.0.0",
    "description": "Extract CRM data from ActiveCampaign web UI",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.activecampaign.com/*",
        "https://*.activehosted.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.activecampaign.com/*",
                "https://*.activehosted.com/*"
            ],
            "js": [
                "selectors.js",
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "dist-popup/index.html",
        "default_title": "Extract CRM Data"
    }
}